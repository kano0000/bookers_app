<h1>Editing Book</h1>

  <% if @book.errors.any? %>
    <p><%= @book.errors.count%> errors prohibited this book from being saved:</p>
    <ul><% @book.errors.full_messages do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

<%= form_with model: @book do |f|%>
  <div class="edit-box">
    <p>Title</p>
    <%= f.text_field :title%>
  </div>
  <div class="edit-box">
    <p>Body</p>
    <%= f.text_area :body%>
  </div>
  <div class="action">
    <%= f.submit "Update Book"%>
  </div>
<% end %>

<%= link_to "Show", book_path(@book.id) %>
<div class="slash">|</div>
<%= link_to "Back", books_path%>